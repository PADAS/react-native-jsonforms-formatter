{
  "compilerOptions": {
    /* Basic Options */
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true,
    "allowJs": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", "babel.config.cjs", "metro.config.js", "jest.config.js"
  ]
}
